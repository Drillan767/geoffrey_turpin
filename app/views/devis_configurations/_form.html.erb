<%= form_for(@devis_configuration, url: devis_configurations_path) do |f| %>

  <div class="form-inputs">
    <div>
      <%= f.label :ratio_facturation, 'Prix de la musique à la seconde' %>
      <%= f.text_field :ratio_facturation %>
    </div>
    <div>
      <%= f.label :tva, 'TVA' %>
      <%= f.text_field :tva %>
    </div>
    <div>
      <%= f.label :taux_image, 'Taux pour composition à l\'image' %>
      <%= f.text_field :taux_image %>
    </div>
    <div>
      <%= f.label :deadline, 'Bonus par nouvelle musique demandé' %>
      <%= f.text_field :deadline %>
    </div>
    <div>
      <%= f.label :per_new_music, 'Bonus pour une musique supplémentaire' %>
      <%= f.text_field :per_new_music %>
    </div>
    <div id="musics_ratios">
      <%= f.fields_for :musics_ratios do |music_ratio| %>
        <%= render 'musics_ratio_fields', f: music_ratio %>

      <% end %>
    </div>
    <div class="links">
      <%= link_to_add_association 'Nouveau genre', f, :musics_ratios %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>