  <!-- Début body -->
<body>
  <div class="row landingpage">
    <div class="col-md-2 col-md-offset-8 landing-logo">
      <%= image_tag("logo")%>
    </div>
    <div class="col-md-offset-7 col-md-4">
        <div class="col-md-4 landing-button">
          <%= link_to(t('accueil.decouvre'), "/biographie")%>
