    <div class="col-md-2 ">
      <p class="footer-address">06.72.44.40.45<br /> turpin-geoffrey@live.fr</p>
    </div>
    <div class="col-md-2 col-md-offset-6 footer-link">
      <%= link_to(t('layout.cgu'), '/mentions_legales')%>
    </div>
    <div class="col-md-1 footer-link">
      <%= link_to(t('layout.plansite'), "/plan")%>
    </div>
    <div class="col-md-1 footer-link">
      <% if I18n.locale == :en %>
          <%= link_to('Français', locale: :fr) %>

      <% else I18n.locale == :fr %>
          <%= link_to('English', locale: :en) %>
      <% end %>
    </div>
  </footer>

